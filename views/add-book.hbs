
<div class="spaceAround">
  <h1>Add a book</h1>
</div>

<form class="spaceAboveThis" id="add_book_form" action="/books" method="post">

    Title: <input id="title_of_book" type="text" name="title" required/>
    Genre: <input id="genre_of_book" type="text" name="genre" required/>
    Cover Image URL: <input id="cover_url_of_book" type="url" name="cover_url" required/>
    Description of Book: <input id="description_of_book" type="text" name="description" required/>

    <br>



  <!-- Dropdown Structure -->
  <div class="input-field col s12">
    <select>
      <option value="" disabled selected>Choose an author</option>
      {{#each data}}
      <option value="{{id}}">{{first_name}} {{last_name}}</option>
      {{/each}}
    </select>
  </div>

    <br>


    <button id="button_add_book"  class="btn waves-effect waves-light orange" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
    </button>
</form>
  <div class="goBack">
    <a href="/books" class="waves-effect indigo btn-large"><i class="material-icons right">library_add</i>Go back to book list</a>
    <a href="/authors" class="waves-effect indigo btn-large"><i class="material-icons right">library_add</i>Go back to authors list</a>
    <a href="/" class="waves-effect indigo btn-large"><i class="material-icons right">library_add</i>Go back to home page</a>


  </div>
